{
  // Git操作モード: "staged" or "committed"
  "gitMode": "staged",

  // チェック対象のファイル拡張子
  "targetExtensions": [ ".cs", ".js", ".ts" ],

  "analyzers": {
    // Roslyn アナライザーの設定
    "roslyn": {
      "enabled": true,
      "rules": [
        {
          // プライマリコンストラクタを使うべき（新規ファイルのみ）
          "id": "IDE0290",
          "name": "Use primary constructor",
          "severity": "warning",
          "applyTo": [ "new" ],
          "filePatterns": [ "*Contgroller.cs", "*Service.cs", "*Repository.cs", "test.cs" ]
        },
        {
          // 自動プロパティを使うべき
          "id": "IDE0032",
          "name": "Use auto property",
          "severity": "warning",
          "applyTo": [ "new", "modified" ]
        },
      ]
    },

    // カスタムルールの設定
    "custom": {
      "enabled": true,
      "rules": [
        {
          // 改行コードがCRLFであること
          "id": "CRLF",
          "name": "Use CRLF line endings",
          "severity": "warning",
          "applyTo": [ "new" ],
          "filePatterns": [ "*.cs" ]
        },
      ]
    },

    // AIベースのLint設定
    "ai": {
      "enabled": true,
      "provider": "claude", // claude, openai, gemini から選択
      "rulesPath": "./ai-rules",

      "apiConfig": {
        "claude": {
          "apiKey": "${CLAUDE_API_KEY}", // 環境変数から取得
          "model": "claude-sonnet-4.5-20250929",
          "endpoint": "https://api.anthropic.com/v1/messages"
        },
        "openai": {
          "apiKey": "${OPENAI_API_KEY}",
          "model": "gpt-4o",
          "endpoint": "https://api.openai.com/v1/chat/completions"
        }
      }
    }
  }
}